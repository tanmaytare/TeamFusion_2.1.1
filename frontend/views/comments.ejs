<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/comments.css">
    <title>Comments</title>
</head>
<body>
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
          <a style="text-decoration: none;" href="/postpage"><span class="navbar-brand mb-0 h1">UpStart</span></a>
        </div>
    </nav>
    <div class="header">Guide And Grow</div>
    <div class="maincontainer">
        <div class="commentsBlock">
            <div class="mainCommentsBlock">
                <% comments.forEach(comment => { %>
                <div class="commentBox">
                    <p><%= comment.text %></p>
                </div>
                <% }); %>
            </div>
        </div>
        <div class="commentsWriteBlock">
            <form action="/postcomments/<%= pid %>" method="post">
                <div class="mb-3">
                <label for="commentarea" class="form-label">Write comment here</label>
                <textarea name="comment" class="form-control" id="commentarea" rows="5" placeholder="comment"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">comment</button>
            </form>
        </div>
    </div>
</body>
</html>